@import 'nib'
global-reset()

body, html
  width: 100%;
  height: 100%;
  background-color: #000;

.hide
  display: none !important;

.visual
  position: fixed;
  top: 0px;
  left: 0px;

.ttl
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;


.ttl_text
  font-family: 'Roboto', sans-serif;
  font-style: italic;
  font-feature-settings: 'palt';
  white-space: nowrap;
  font-size: 24vw;
  font-weight:bolder;
  color: #FFF;
  font-style: italic;
